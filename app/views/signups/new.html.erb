<!DOCTYPE html>
<html>
<body> 

<p>Personal Information</p>
<div class="jumbotron">
         
        <%= form_for(:signup, url: signups_path) do |f| %>
        <div class="field"> 
            <%= f.label :first_name %><br>
    		<%= f.text_field :first_name, :required => true, :placeholder => "First name" %><br>
    		<br>
    		<%= f.label :last_name %><br>
  	        <%= f.text_field :last_name, :required => true, :placeholder => "Last name" %><br>
  	        <br>
  	        <%= f.label :username %><br>
  	        <%= f.text_field :username, :required => true, :placeholder => "Username" %><br>
  	        <br>
    		<%= f.label :email_field %><br>
    		<%= f.email_field :email, :required => true, :placeholder => "Email" %><br>
    		<br>
    		<%= f.label :phone_number %><br>
         	<%= f.phone_field :phone_number, :required => true, :placeholder => "Mobile" %><br>
   	        <br>
    		<br>
  	      </div>  
  	    <%= f.submit "Save",  class:'btn'%>    
  	    
        <% end %>
          


	

	
 </div>
 

</body>
</html>